<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <variable
      name="viewModel"
      type="com.github.ashutoshgngwr.noice.fragment.SubscriptionBillingCallbackViewModel" />

  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      app:isVisible="@{viewModel.isLoading}"
      tools:visibility="gone">

      <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

      <Space
        android:layout_width="16dp"
        android:layout_height="wrap_content" />

      <TextView
        style="@style/Widget.App.TextView.Message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/confirming_payment" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:isVisible="@{!viewModel.isLoading}">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isVisible="@{!viewModel.wasCancelled}">

        <TextView
          style="@style/Widget.App.TextView.Message.Success"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/subscription_payment_complete"
          app:isVisible="@{viewModel.error == null}" />

        <TextView
          style="@style/Widget.App.TextView.Message.Error"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/subscription_payment_confirmation_failed"
          app:isVisible="@{viewModel.error != null}"
          tools:visibility="gone" />

      </FrameLayout>

      <TextView
        style="@style/Widget.App.TextView.Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subscription_payment_cancelled"
        app:isVisible="@{viewModel.wasCancelled}"
        tools:visibility="gone" />

      <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

      <Button
        style="?attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="@{() -> viewModel.onDismissClicked.invoke()}"
        android:text="@string/okay" />

    </LinearLayout>

  </FrameLayout>

</layout>
