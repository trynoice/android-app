<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Widget.App.Button.IconButton.Outlined" parent="Widget.Material3.Button.IconButton">
    <item name="strokeColor">@color/m3_button_outline_color_selector</item>
    <item name="strokeWidth">@dimen/m3_btn_stroke_size</item>
  </style>

  <style name="TextAppearance.App.CountdownTextView" parent="TextAppearance.Material3.DisplayMedium">
    <item name="android:textColor">?attr/colorPrimary</item>
  </style>

  <style name="TextAppearance.App.CountdownTextView.Disabled">
    <item name="android:textColor">@color/material_on_background_disabled</item>
  </style>

  <style name="Widget.App.DurationPicker.Button.AddTime" parent="Widget.Material3.Button.TextButton.Icon">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
    <item name="icon">@drawable/ic_baseline_add_24</item>
  </style>

  <style name="Widget.App.Account.Category.Header" parent="android:Widget.TextView">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingEnd">@dimen/root_layout_padding</item>
    <item name="android:paddingStart">@dimen/root_layout_padding</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>

  <style name="Widget.App.Account.Category.Item" parent="android:Widget.TextView">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:drawablePadding">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:padding">@dimen/root_layout_padding</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    <item name="drawableEndCompat">@drawable/ic_round_navigate_next_24</item>
  </style>

  <style name="Widget.App.SubscriptionPlan.Benefits.LineItem" parent="android:Widget.TextView">
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    <item name="drawableTint">?attr/colorPrimary</item>
  </style>

  <style name="Widget.App.TextView.Message.Success" parent="android:Widget.TextView">
    <item name="android:drawablePadding">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    <item name="drawableStartCompat">@drawable/ic_baseline_check_circle_36</item>
    <item name="drawableTint">@color/green_500</item>
  </style>

  <style name="Widget.App.TextView.Message.Success.Centered">
    <item name="android:gravity">center</item>
    <item name="drawableStartCompat">@null</item>
    <item name="drawableTopCompat">@drawable/ic_baseline_check_circle_36</item>
  </style>

  <style name="Widget.App.TextView.Message.Error" parent="android:Widget.TextView">
    <item name="android:drawablePadding">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    <item name="drawableStartCompat">@drawable/ic_baseline_error_36</item>
    <item name="drawableTint">?attr/colorError</item>
  </style>

  <style name="Widget.App.TextView.Message.Error.Centered">
    <item name="android:gravity">center</item>
    <item name="drawableStartCompat">@null</item>
    <item name="drawableTopCompat">@drawable/ic_baseline_error_36</item>
  </style>

  <style name="Widget.App.SubscriptionPurchase.LineItem" parent="android:Widget.TextView">
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
  </style>

  <style name="Widget.App.LibrarySoundInfo.LineItem" parent="android:Widget.TextView">
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    <item name="drawableTint">?attr/colorPrimary</item>
  </style>

  <style name="TextAppearance.App.MainActivity.NetworkIndicator" parent="TextAppearance.Material3.LabelMedium" />

  <style name="TextAppearance.App.MainActivity.NetworkIndicator.Offline">
    <item name="android:textColor">?attr/colorError</item>
  </style>

  <style name="TextAppearance.App.MainActivity.NetworkIndicator.Online">
    <item name="android:textColor">?attr/colorPrimary</item>
  </style>

  <style name="ThemeOverlay.App.Button.DestructiveAction" parent="">
    <item name="colorPrimary">?attr/colorError</item>
  </style>

  <style name="Widget.App.Snackbar" parent="">
    <item name="snackbarStyle">@style/Widget.Material3.Snackbar</item>
    <item name="snackbarTextViewStyle">@style/Widget.App.Snackbar.TextView</item>
  </style>

  <style name="Widget.App.Snackbar.Error">
    <item name="colorPrimaryInverse">?attr/colorError</item>
    <item name="colorSurfaceInverse">?attr/colorOnErrorContainer</item>
    <item name="colorOnSurfaceInverse">?attr/colorErrorContainer</item>
  </style>

  <style name="Widget.App.Snackbar.Success">
    <item name="colorPrimaryInverse">@color/snack_bar_success_on_surface</item>
    <item name="colorSurfaceInverse">@color/snack_bar_success_surface</item>
    <item name="colorOnSurfaceInverse">@color/snack_bar_success_on_surface</item>
  </style>

  <style name="Widget.App.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
    <item name="android:gravity">center_vertical|start</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    <item name="drawableTint">?attr/colorOnSurfaceInverse</item>
  </style>

  <style name="Widget.App.Alarms.TextView" parent="">
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    <item name="drawableTint">?attr/colorOnSurfaceVariant</item>
  </style>

  <style name="Widget.App.Alarms.TextView.Clickable">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
  </style>

  <style name="Widget.App.Alarms.WeekDayToggleButton" parent="android:Widget.Button.Toggle">
    <item name="android:minWidth">@dimen/alarms_weekday_toggle_button_size</item>
    <item name="android:maxWidth">@dimen/alarms_weekday_toggle_button_size</item>
    <item name="android:minHeight">@dimen/alarms_weekday_toggle_button_size</item>
    <item name="android:maxHeight">@dimen/alarms_weekday_toggle_button_size</item>
    <item name="android:background">@drawable/alarm_item_weekday_toggle_bg</item>
    <item name="android:textColor">@drawable/alarm_item_weekday_toggle_text_color</item>
    <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
    <item name="android:textOff">@null</item>
    <item name="android:textOn">@null</item>
  </style>

  <style name="Widget.App.PlaybackController.IconButton" parent="Widget.Material3.Button.IconButton">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:padding">2dp</item>
    <item name="iconSize">26dp</item>
    <item name="iconTint">?attr/colorOnSurface</item>
  </style>

</resources>
